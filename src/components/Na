                <Link to="/register/shopkeeper">Shopkeeper Registration</Link>
              </div>
            </div>
          </div>
          
          <button className="mobile-menu-btn" onClick={toggleMenu}>
            <span></span>
            <span></span>
            <span></span>
          </button>
        </div>
      </div>
    </nav>
  );
};

